<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100, 100) if user.present? %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <td><%= user.name if user.present? %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= user.introduction if user.present? %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <h2>New Book</h2>
      <% if book.errors.any? %>
        <%= book.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Body</h4>
        <%= f.text_area :body %>
        <div class="btn btn-success">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


