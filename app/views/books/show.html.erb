<div>
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'index', user: @user, book: @book_new %>
    </div>

<!--<div class="container">
  <div class="row">-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <p><%= link_to @user.name, user_path(@user) %></p>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success btn-sm' %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@book.id), class: 'btn btn-danger btn-sm',method: :delete, "data-confirm" => "本当に削除しますか？" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>