<h1>Editing Book</h1>
<%= form_with model: @book do |book| %>
  <label>Body</label>
  <%= book.text_field :title, autofocus: true %>
  <!-- idを入れるかは不明 -->
  <label>Title</label>
  <%= book.text_field :body %>
  <%= book.submit "Update Book" %>

  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back", '/books' %>
<% end %>